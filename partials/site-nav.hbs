<nav class="site-nav">
    <div class="site-nav-container">
        <div class="site-nav-left">
            {{#if @blog.navigation}}
                {{navigation}}
            {{/if}}
        </div>
        <div class="site-nav-right">
            <div class="social-links">
                {{#if @blog.facebook}}
                    <a class="social-link social-link-fb" href="{{facebook_url @blog.facebook}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
                {{/if}}
                {{#if @blog.twitter}}
                    <a class="social-link social-link-tw" href="{{twitter_url @blog.twitter}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
                {{/if}}

                <!-- Links specific to DuckDuckGo -->
                <a class="social-link social-link-reddit" href="https://www.reddit.com/r/duckduckgo/" target="_blank" rel="noopener">{{> "icons/reddit"}}</a>
                <a class="social-link social-link-nl" href="https://duckduckgo.com/newsletter" target="_blank" rel="noopener">{{> "icons/newsletter"}}</a>

                <!-- RSS -->
                <a class="social-link rss-button" href="https://feedly.com/i/subscription/feed/{{@blog.url}}/rss/" target="_blank" rel="noopener">{{> "icons/rss"}}</a>
            </div>
        </div>
    </div>
</nav>
