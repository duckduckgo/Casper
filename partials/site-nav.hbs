<nav class="site-nav">
    <div class="site-nav-container">
        <div class="site-nav-left">
            {{#if @site.navigation}}
                {{navigation}}
            {{/if}}
        </div>
        <div class="site-nav-right">
            <div class="social-links">
                {{#if @site.facebook}}
                    <a aria-label="Facebook" class="social-link social-link-fb" href="{{facebook_url @site.facebook}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
                {{/if}}
                {{#if @site.twitter}}
                    <a aria-label="Twitter" class="social-link social-link-tw" href="{{twitter_url @site.twitter}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
                {{/if}}

                <!-- Links specific to DuckDuckGo -->
                <a aria-label="Reddit" class="social-link social-link-reddit" href="https://www.reddit.com/r/duckduckgo/" target="_blank" rel="noopener">{{> "icons/reddit"}}</a>
                <a aria-label="Newsletter" class="social-link social-link-nl" href="https://duckduckgo.com/newsletter" target="_blank" rel="noopener">{{> "icons/newsletter"}}</a>

                <!-- RSS -->
                <a aria-label="RSS" class="social-link rss-button" href="{{@site.url}}/rss/" target="_blank" rel="noopener">{{> "icons/rss"}}</a>
            </div>
        </div>
    </div>
</nav>
